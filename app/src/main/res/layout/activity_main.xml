<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vic.tbook.activity.MainActivity">

    <RadioGroup
        android:id="@+id/rg_navi"
        android:background="@drawable/shouye_bar_bottom"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/btn_store"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/btn_store_selector"
            android:text="书城"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/btn_cart"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/btn_cart_selector"
            android:text="购物车"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:button="@null"/>
        <RadioButton
            android:id="@+id/btn_mine"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:drawableTop="@drawable/btn_mine_selector"
            android:text="我的TBook"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:button="@null"/>
    </RadioGroup>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_above="@id/rg_navi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
