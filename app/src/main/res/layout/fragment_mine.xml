<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="vic.tbook.fragment.MineFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/rl_mine_header"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/wode_bg_header">
        <TextView
            android:id="@+id/tv_mytbook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/MyTbook"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>
        <vic.tbook.ui.CircleImageView
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_nick_name"
            android:id="@+id/iv_photo"
            android:src="@drawable/touxiang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/myNickName"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_mine_header"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:id="@+id/itemShoucang"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/imageView1"
                android:src="@drawable/mine_ico_shoucang"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我收藏的商品"
                android:id="@+id/textView3"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_toEndOf="@+id/imageView1"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:id="@+id/textView4"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/imageView1"
                android:layout_toEndOf="@+id/imageView1"
                android:layout_marginRight="10dp"
                android:layout_below="@id/textView3"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemAddress"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/mine_ico_address"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="我的地址管理"
                android:id="@+id/tvTotalDesc"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginRight="10dp"
                android:layout_below="@id/tvTotalDesc"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemOrder"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/imageView31"
                android:src="@drawable/mine_ico_order"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="鎴戠殑璁㈠崟"
                android:id="@+id/textView32"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView31"
                android:layout_toEndOf="@+id/imageView31"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:id="@+id/textView33"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/imageView31"
                android:layout_toEndOf="@+id/imageView31"
                android:layout_marginRight="10dp"
                android:layout_below="@id/textView32"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/itemSettings"
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/imageView41"
                android:src="@drawable/mine_ico_settings"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="璁剧疆"
                android:id="@+id/textView42"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView41"
                android:layout_toEndOf="@+id/imageView41"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#cccccc"
                android:id="@+id/textView43"
                android:layout_gravity="center_horizontal"
                android:layout_toRightOf="@+id/imageView41"
                android:layout_toEndOf="@+id/imageView41"
                android:layout_marginRight="10dp"
                android:layout_below="@id/textView42"/>

        </RelativeLayout>

